@model DataConnect.Models.ChangePasswordViewModel;

@{
    ViewData["Title"] = "EditPassword";
    Layout = "UserLayout";
}

<hr />
<div class="row">
    <div class="col-sm-12">
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <form method="post" id="passwordForm">
            <div class="form-group">
                <label asp-for="OldPassword" type="Password" runat="server" class="control-label">Old Password</label>
                @if (ViewData["Error2"] != null)
                {
                    <span class="text-danger">@ViewData["Error2"]</span>
                }
                <input asp-for="OldPassword" type="Password" runat="server" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
             <div class="form-group">
                 <label asp-for="NewPassword1" type="Password" runat="server" class="control-label">New Password</label>
                 <input asp-for="NewPassword1" type="Password" runat="server" class="form-control" />
                 <span asp-validation-for="NewPassword1" class="text-danger"></span>
             </div>
             <div class="form-group">
                 <label asp-for="NewPassword2" type="Password" runat="server" class="control-label">Confirm New Password</label>
                 @if (ViewData["Error"] != null)
                 {
                     <span class="text-danger">@ViewData["Error"]</span>
                 }
                 <input asp-for="NewPassword2" type="Password" runat="server" class="form-control" />
                 <span asp-validation-for="NewPassword2" class="text-danger"></span>
             </div>
            <input type="submit" class="btn btn-primary" data-loading-text="Changing Password..." value="Change Password">
        </form>
    </div>
</div>


