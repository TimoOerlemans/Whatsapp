@model DataConnect.Models.ChannelViewModel

@{
    ViewData["Title"] = "EditChannel";
    Layout = "ModLayout";
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditChannel">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" value="@Model.Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required="" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" value ="@Model.Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" required="" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Channels</a>
</div>

