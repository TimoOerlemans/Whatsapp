@model LoginViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Login";
    Layout = "LoginLayout";
}
<appSettings>
    <add key="ClientValidationEnabled" value="true" />
    <add key="UnobtrusiveJavaScriptEnabled" value="true" />
    <form asp-action="Login">
        <div class="container">
            <div class=" form-group">
            <label for="Email"><b>Email</b></label>
            <input type="text" asp-for="Email" placeholder="Enter Email">
            <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        <div class="form-group">
            <label for="psw"><b>Password</b></label>
            <input type="password" asp-for="Password" placeholder="Enter Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
            @if (ViewData["Error"] != null)
            {
                <span class="text-danger">@ViewData["Error"]</span>
            }
            <button class="btn-primary" type="submit">Login</button>
            <label>
                <input type="checkbox" checked="checked" name="remember"> Remember me
            </label>
        </div>      
            <span class="psw"><a asp-controller="Account" asp-action="Register">Register account?</a></span>
    </form>

